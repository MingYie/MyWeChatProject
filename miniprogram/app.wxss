@import "./styles/iconfront.wxss";

page,view,text,swiper,swiper-item,image,navigator{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}

/*
 主题颜色 通过变量来实现
 1. less中存在变量这个知识
 2. 原生的css和wxss也是支持 变量
 */
 page{
     /*定义主题颜色*/
     --themeColor:#0094ff;
     /*
     定义统一字体颜色 假设设计稿大小是375px
     1px= 2rpx
     14px= 28rpx
     */
     font-size: 28rpx;
 }

 image{
     width: 100%;
 }
