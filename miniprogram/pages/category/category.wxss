page {
  height: 100%;
}
.txt {
  color: #f00;
}
.category_index {
  height: 100%;
}
.category_index .category_containers {
  /*less中使用cals的时候要注意用 ~''来原样输出*/
  height: calc(100vh - 90rpx);
  display: flex;
  /*伸缩盒子*/
}
.category_index .category_containers .left_menu {
  /*子项 高度 100% flex*/
  flex: 2;
}
.category_index .category_containers .left_menu .menu_left {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.category_index .category_containers .left_menu .active {
  color: #FF6666;
  border-left: 5rpx solid currentColor;
}
.category_index .category_containers .right_menu {
  /*子项 高度 100% flex*/
  flex: 5;
}
.category_index .category_containers .right_menu .menu_list .first_tab {
  display: flex;
  flex-wrap: wrap;
}
.category_index .category_containers .right_menu .menu_list .first_tab .menu_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 99.33%;
  text-align: center;
}
.category_index .category_containers .right_menu .menu_list .first_tab .menu_title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.category_index .category_containers .right_menu .menu_list .first_tab .goods_item {
  display: flex;
  border-bottom: 1px solid #ccc;
}
.category_index .category_containers .right_menu .menu_list .first_tab .goods_item .img_right_wrap {
  flex: 3;
  justify-content: center;
  align-items: center;
}
.category_index .category_containers .right_menu .menu_list .first_tab .goods_item .img_right_wrap image {
  width: 100%;
}
.category_index .category_containers .right_menu .menu_list .first_tab .goods_item .info_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding-left: 4rpx;
}
.category_index .category_containers .right_menu .menu_list .first_tab .goods_item .info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.category_index .category_containers .right_menu .menu_list .first_tab .goods_item .info_wrap .goods_price {
  color: #FF0033;
  font-size: 32rpx;
}
