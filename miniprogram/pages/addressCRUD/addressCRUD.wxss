.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    margin-top: 30px;
}

.inputAddress{
    width: 80%;
    padding: 8px;
    box-sizing: border-box;
    margin-top: 10px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    font-size: 12px;
    box-sizing: 12px;
    border: 1px solid #c1c1c1;
    border-radius: 8px;
}

.inputAddress image:nth-child(1){
    width: 12px;
    height: 12px;
}

.inputAddress input{
    flex-grow: 1;
    margin-left: 10px;
}

.btn-save{
    padding: 10px 80px;
    color: white;
    justify-self: center;
    background: linear-gradient(to bottom,rgb(11, 170, 245),rgb(11, 245, 232));
    margin-top: 30px;
    border-radius: 10px;
    border-bottom: 50px;
}